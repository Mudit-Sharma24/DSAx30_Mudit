# problem 1

n=int(input("Enter a number:"))
l=[]
for i in range(n*2-1):
    l.append(n)
beg=1
end=len(l)-2
print(*l)
def pattern(beg,end,l):
    beg1=beg
    end1=end
    while beg1<=end1:
        l[beg1]=l[end1]=l[beg1]-1
        beg1+=1
        end1-=1
    print(*l)
    if beg<end:
        pattern(beg+1,end-1,l.copy())
        print(*l)
pattern(beg,end,l.copy())
print(*l)